<style>
  .trust-badges {
    padding: {{ section.settings.padding_y }}px 0;
    border-top: 1px solid {{ section.settings.border_color }};
    border-bottom: 1px solid {{ section.settings.border_color }};
  }

  .trust-badges__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1.5rem 2rem;
  }

  .trust-badges__label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: {{ section.settings.label_color }};
    white-space: nowrap;
  }

  .trust-badges__logos {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1.5rem 2.5rem;
  }

  .trust-badges__logo {
    opacity: 0.7;
    transition: opacity 0.3s ease;
    height: {{ section.settings.logo_height }}px;
  }

  .trust-badges__logo:hover {
    opacity: 1;
  }

  .trust-badges__logo svg {
    height: 100%;
    width: auto;
  }

  .trust-badges__rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .trust-badges__stars {
    display: flex;
    gap: 0.125rem;
  }

  .trust-badges__stars svg {
    width: 16px;
    height: 16px;
  }

  .trust-badges__rating-text {
    font-size: 0.875rem;
    color: {{ section.settings.rating_text_color }};
    font-weight: 500;
  }

  @media (max-width: 749px) {
    .trust-badges__container {
      flex-direction: column;
      gap: 1rem;
    }
    
    .trust-badges__logos {
      gap: 1rem 1.5rem;
    }
    
    .trust-badges__logo {
      height: {{ section.settings.logo_height | times: 0.8 }}px;
    }
  }
</style>

